{*
 * @version    		template_translate.phtml 1.0 2009-10-18
 * @param ArrayList $items
 *}
 
{foreach $items as $item}
{if $iterator->isFirst()}
<ul>
{/if}
<li><a href="{$item->url}">{$item->label|translate}</a>
{if count($item->items)}
{include $template->getFile() 'items' => $item->items}
{/if}
</li>
{if $iterator->isLast()}
</ul>
{/if}
{/foreach}
